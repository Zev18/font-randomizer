{
  "name": "font-randomizer",
  "displayName": "Font Randomizer",
  "description": "Why limit yourself to just one font?",
  "version": "1.0.0",
  "icon": "assets/icon.png",
  "publisher": "zevross",
  "author": {
    "name": "Zev Ross"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zev18/font-randomizer"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Extension Packs",
    "Themes",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "keywords": [
    "font",
    "randomizer",
    "theme"
  ],
  "license": "SEE LICENSE IN license.txt",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "type": "object",
        "title": "Font Randomizer",
        "properties": {
          "fontRandomizer.activateOnStartup": {
            "type": "boolean",
            "default": "true",
            "description": "Whether to randomly change the font on startup or not"
          },
          "fontRandomizer.fontList": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [
              "Cascadia Code"
            ],
            "description": "List of fonts for the extension to randomly select from"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "font-randomizer.randomize",
        "title": "Randomize Font"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0"
  }
}
